<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="LargeWhiteFont">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="MediumWhiteFont">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="RedBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/light_red</item>
        <item name="android:icon">@drawable/hd_1</item>
    </style>

    <style name="LightBlueTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowBackground">@color/light_blue</item>
        <item name="android:colorBackground">@color/light_blue</item>
        <item name="android:windowTitleBackgroundStyle">@style/RedBar</item>
        <item name="android:actionBarStyle">@style/RedBar</item>

    </style>

</resources>
